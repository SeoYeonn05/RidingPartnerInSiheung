<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.first.ridingpartnerinsiheung.scenarios.main.mainPage.menuPage.StartViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rainTypeTV"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.weather.rainType}" />
            <TextView
                android:id="@+id/humidityTV"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.weather.humidity}" />
            <TextView
                android:id="@+id/skyTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@{viewModel.weather.sky}" />
            <TextView
                android:id="@+id/tempTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@{viewModel.weather.temp}" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" " />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" " />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text=" " />
            <android.widget.Button
                android:id="@+id/myPageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edge"
                android:shadowColor="#FFFFFF"
                android:text="마이페이지"
                android:textColor="#000000"
                android:textSize="20dp"
                android:onClick="@{mainActivity::btnClick}"
                android:textStyle="bold"/>
            <android.widget.Button
                android:id="@+id/recommendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edge"
                android:shadowColor="#FFFFFF"
                android:text="추천 경로 보기"
                android:textColor="#000000"
                android:textSize="20dp"
                android:onClick="@{mainActivity::btnClick}"
                android:textStyle="bold"/>
            <android.widget.Button
                android:id="@+id/findOfficeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edge"
                android:shadowColor="#FFFFFF"
                android:text="대여소 위치 찾기"
                android:textColor="#000000"
                android:textSize="20dp"
                android:onClick="@{mainActivity::btnClick}"
                android:textStyle="bold"/>
            <android.widget.Button
                android:id="@+id/findPathBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edge"
                android:shadowColor="#FFFFFF"
                android:text="목표까지 길찾기"
                android:textColor="#000000"
                android:textSize="20dp"
                android:onClick="@{mainActivity::btnClick}"
                android:textStyle="bold"/>
            <android.widget.Button
                android:id="@+id/ridingStartBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edge"
                android:shadowColor="#FFFFFF"
                android:text="라이딩 시작"
                android:textColor="#000000"
                android:textSize="20dp"
                android:onClick="@{mainActivity::btnClick}"
                android:textStyle="bold"/>



        </LinearLayout>

    </LinearLayout>
</layout>