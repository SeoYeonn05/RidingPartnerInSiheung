<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.first.ridingpartnerinsiheung.scenarios.main.mainPage.startPage.StartViewModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/darkBlue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/main_font"
                android:text="HOME"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="0.3">

            </TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@{viewModel.weather.temp}"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginLeft="29dp"
                android:gravity="left|center_vertical"
                android:layout_weight="0.4">

            </TextView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/button_yellow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:fontFamily="@font/b"
                        android:textStyle="bold"

                        android:text="날씨 정보" />
                    <ImageView
                        android:layout_margin="10dp"
                        android:id="@+id/skyTypeImg"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="1">

                    </ImageView>
                    <TextView
                        android:id="@+id/skyTV"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/b"
                        android:layout_weight="0.4"
                        android:text="@{viewModel.weather.sky}" >

